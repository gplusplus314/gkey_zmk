		navsym_layer {
			bindings = <
        &kp N8       &kp HOME      &kp UP       &kp END          &kp PG_UP           /*& &*/      &trans              &kp N4           &kp N5         &kp N6        &kp N7 
        &kp N9       &kp LEFT      &kp DOWN     &kp RIGHT        &kp PG_DN           /*& &*/      &kp GRAVE           &kp N1           &kp N2         &kp N3        &kp N0
        &kp DEL      &trans        &kp LBKT     &kp RBKT         &trans              /*& &*/      &trans              &kp BSLH         &trans         &trans        &trans 
                                       &trans        &trans          &glt L_DUAL ESC /*& &*/ &glt L_DUAL RET   &trans            &trans
			>;
		};

		util_layer {
			bindings = <
        &trans       &trans        &trans        &trans          &trans        /*& &*/     &trans              &trans           &trans         &trans        &trans
        &trans       &trans        &trans        &trans          &trans        /*& &*/     &trans              &trans           &trans         &trans        &trans
